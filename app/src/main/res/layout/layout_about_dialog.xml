<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <TextView
            style="@style/blackTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_about"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <TextView
            style="@style/blackTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/about_version"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_about_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/titleTxt"
            android:textSize="@dimen/sp14" />

        <TextView
            style="@style/blackTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/about_use"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_about_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="@string/about_use_content"
            android:textColor="@color/titleTxt"
            android:textSize="@dimen/sp14" />

        <TextView
            style="@style/blackTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/about_license"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="@string/about_license_content"
            android:textColor="@color/titleTxt"
            android:textSize="@dimen/sp14" />

        <TextView
            style="@style/blackTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_follow"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_about_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp24"
                android:src="@mipmap/about_github" />

            <ImageView
                android:id="@+id/iv_about_juejin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp24"
                android:src="@mipmap/about_juejin" />

            <ImageView
                android:id="@+id/iv_about_jianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp24"
                android:src="@mipmap/about_jianshu" />

            <ImageView
                android:id="@+id/iv_about_csdn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp24"
                android:src="@mipmap/about_csdn" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp24">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_about_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/tv_about_rate"
                android:text="@string/about_close"
                android:textColor="@color/theme" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_about_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/about_rate"
                android:textColor="@color/theme" />
        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>