<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_nav_sample"
        tools:context=".ui.navigation.NavSampleActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_sample"
            android:src="@mipmap/bg_sample_drawerlayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="411dp"
            android:layout_height="298dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp18"
            android:id="@+id/tv_sample_title"
            android:layout_marginTop="@dimen/dp20"
            app:layout_constraintTop_toBottomOf="@+id/iv_sample"
            android:textStyle="bold"
            style="@style/normalTxt"
            android:text="@string/sample_desc"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp16"
            android:lineSpacingExtra="@dimen/dp6"
            android:text="@string/smaple_file_desc"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            app:layout_constraintTop_toBottomOf="@+id/tv_sample_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>