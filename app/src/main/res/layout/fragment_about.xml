<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".ui.AboutFragment">


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:text="@string/app_name"
                style="@style/blackTxt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/nav_header_subtitle"
                android:layout_marginTop="@dimen/dp10"
                style="@style/blackTxt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:padding="@dimen/dp10"
                android:background="@color/grey"
                style="@style/blackTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="@string/about_version"
                android:textStyle="bold"/>

        <TextView
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/tv_about_version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/titleTxt"
                android:textSize="@dimen/sp14"/>


        <TextView
                android:padding="@dimen/dp10"
                android:background="@color/grey"
                style="@style/blackTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="@string/about_use"
                android:textStyle="bold"/>

        <TextView
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/tv_about_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/about_use_content"
                android:textColor="@color/titleTxt"
                android:textSize="@dimen/sp14"/>

        <TextView
                android:background="@color/grey"
                android:padding="@dimen/dp10"
                style="@style/blackTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="@string/about_license"
                android:textStyle="bold"/>

        <TextView
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/about_license_content"
                android:textColor="@color/titleTxt"
                android:textSize="@dimen/sp14"/>

        <TextView
                android:background="@color/grey"
                android:padding="@dimen/dp10"
                style="@style/blackTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_follow"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_about_github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp24"
                    android:src="@mipmap/about_github"/>

            <ImageView
                    android:id="@+id/iv_about_juejin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp24"
                    android:src="@mipmap/about_juejin"/>

            <ImageView
                    android:id="@+id/iv_about_jianshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp24"
                    android:src="@mipmap/about_jianshu"/>

            <ImageView
                    android:id="@+id/iv_about_csdn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp24"
                    android:src="@mipmap/about_csdn"/>
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp24"
                android:paddingBottom="@dimen/dp24">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/tv_about_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:text="@string/about_blog"
            />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/tv_about_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_rate"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
